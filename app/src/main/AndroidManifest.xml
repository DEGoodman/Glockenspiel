<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.glockenspiel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon2"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlayerActivity"
            android:label="@string/title_activity_player"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.example.glockenspiel.PlayerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrimerActivity"
            android:label="@string/title_activity_primer"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.example.glockenspiel.PrimerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BeginnerActivity"
            android:label="@string/title_activity_beginner"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.example.glockenspiel.BeginnerActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter> >
        </activity>
    </application>

</manifest>
